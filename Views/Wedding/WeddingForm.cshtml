@{
    ViewData["Title"] = "Plan a new wedding";
}
@model Wedding

<div class="text-center">
    <h1 class="display-4">Plan a new wedding!</h1>

    <form asp-action="NewWedding" asp-controller="Wedding" method="post" class="m-4 container">
        <div class="row justify-content-md-center">
            <div class="col col-md-auto">
                <div class="my-2">
                    <label asp-for="WedderOne">First Party</label><br>
                    <input asp-for="WedderOne"><br>
                    <span class="text-danger fw-bold" asp-validation-for="WedderOne"></span>
                </div>
                <div class="my-2">
                    <label asp-for="WedderTwo">Second Party</label><br>
                    <input asp-for="WedderTwo"><br>
                    <span class="text-danger fw-bold" asp-validation-for="WedderTwo"></span>
                </div>
                <div class="my-2">
                    <label asp-for="WeddingDate">Wedding Date</label><br>
                    <input asp-for="WeddingDate"><br>
                    <span class="text-danger fw-bold" asp-validation-for="WeddingDate"></span>
                </div>
                <div class="my-2">
                    <label asp-for="WeddingAddress">Wedding Address</label><br>
                    <input asp-for="WeddingAddress"><br>
                    <span class="text-danger fw-bold" asp-validation-for="WeddingAddress"></span>
                </div>
            </div>
            <input type="submit" value="Schedule Wedding" class="m-2">
        </div>
    </form>


</div>